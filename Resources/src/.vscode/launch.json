    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cocos-Launch",
            "type": "lua",
            "request": "launch",
            "runtimeType": "Cocos3",
            "localRoot": "${workspaceRoot}",
            "mainFile": "src/main.lua",
            "commandLine": [
                "-workdir ${workspaceRoot}/../"
            ],
            "port": 7003,
            "exePath": "${workspaceRoot}/../../../../simulator/win32/revenge_of_the_future.exe",
            "printType": 1
        },
        {
            "name": "Lua51-Launch",
            "type": "lua",
            "request": "launch",
            "runtimeType": "Lua51",
            "localRoot": "${workspaceRoot}",
            "mainFile": "main",
            "port": 7003,
            "printType": 1
        }
    ]
}